<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light"
    tools:context=".Useractivity.ProfileFragment">
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skyblue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Profile"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="190dp"
                android:src="@drawable/baseline_search_24"
                android:background="@android:color/transparent"
                />
          <!--  <ImageView
                android:id="@+id/wishlist"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/heart"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                />
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/bell"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                />-->
            <!-- Wishlist Badge -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginStart="10dp"
                >

                <ImageView
                    android:id="@+id/wishlist"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/heart"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/wishlistBadge"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:background="@drawable/badge_background"
                    android:padding="3dp"
                    android:visibility="visible" />
            </FrameLayout>

            <!-- Notification Badge -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginStart="10dp"
                >

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/bell"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@+id/notificationBadge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="top|end"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:background="@drawable/badge_background"
                    android:padding="3dp"
                    android:visibility="visible" />
            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView7"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:lottie_fileName="prfile.json"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="80dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="300dp"
        >
        <Button
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnbox"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:elevation="10dp"
            android:textSize="17dp"
            android:text="Order" />
        <Button
            android:id="@+id/aboutus"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnbox"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:elevation="10dp"
            android:text="About US" />
        <Button
            android:id="@+id/customercare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnbox"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:text="Customer Care" />

        <Button
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnbox"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:text="Share App" />

        <Button
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnbox"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:text="Rate App" />
        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnbox"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:text="Logout" />

    </LinearLayout>

</RelativeLayout>