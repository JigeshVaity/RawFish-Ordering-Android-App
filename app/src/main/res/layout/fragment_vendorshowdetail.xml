<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light"
    tools:context=".vendor.vendorshowdetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- symbol -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/backbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backbutton"/>
                <ImageView
                    android:id="@+id/sharebutton"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share2"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="235dp"
                    />
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/heart"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/bell"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    />

            </LinearLayout>

            <!-- Main design -->

            <ImageView
                android:id="@+id/foodPic"
                android:layout_width="350dp"
                android:layout_height="275dp"
                android:layout_margin="24dp"
                android:src="@drawable/raw" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/background_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_white"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/titleTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="25dp"
                        android:background="@android:color/transparent"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_white"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vendor name-"
                        android:textSize="18sp"

                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="25dp"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:id="@+id/nameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:text="Category"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/white"
                            >
                            <TextView
                                android:id="@+id/productsize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:layout_marginStart="25dp"
                                android:background="@color/white"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:layout_marginStart="15dp"
                                android:background="@color/white"
                                />

                        </LinearLayout>
                        <!--Price value-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/white"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20%"
                                android:textColor="#4CAF50"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:layout_marginStart="25dp"
                                android:background="@color/white"
                                />
                            <TextView
                                android:id="@+id/originaltxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500"
                                android:textColor="@color/grey"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:layout_marginStart="10dp"
                                android:background="@color/white"
                                />
                            <TextView
                                android:id="@+id/priceTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹400"
                                android:textColor="@color/black"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:layout_marginStart="10dp"
                                android:background="@color/white"
                                />
                        </LinearLayout>


                    </LinearLayout>

                    <!--price button -->
                    <ImageView
                        android:id="@+id/minusCartBtn"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/minus"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/btnbox"
                        />
                    <TextView
                        android:id="@+id/numberItemTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="13dp"
                        android:background="@color/white"
                        />
                    <ImageView
                        android:id="@+id/plusCartBtn"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/plus"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="13dp"
                        android:background="@drawable/btnbox"
                        />
                    <!-- Price and button -->
                </LinearLayout>

                <!-- total price -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price base on quantity-"
                        android:background="@color/white"
                        android:layout_marginStart="25dp"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/totalPriceTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹400"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_marginStart="10dp"
                        android:textSize="20dp"/>
                </LinearLayout>

                <!-- data info-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <!-- First Item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="20dp"
                            android:background="@color/white"
                            android:src="@drawable/rating1" />

                        <TextView
                            android:id="@+id/starTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:text="4.9"
                            android:textColor="@color/black"
                            android:textSize="15dp"

                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Second Item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@color/white"
                            android:paddingStart="1dp"
                            android:layout_marginStart="30dp"
                            android:src="@drawable/weightscale" />

                        <TextView
                            android:id="@+id/quantityTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:text="500g"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Third Item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="30dp"
                            android:background="@color/white"
                            android:src="@drawable/size" />

                        <TextView
                            android:id="@+id/sizeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:text="Medium"
                            android:paddingStart="8dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Delivery within 1-2 days"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="25dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description-"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:background="@color/white"
                        android:layout_marginStart="25dp"/>
                    <TextView
                        android:id="@+id/descriptionTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description "
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:background="@color/white"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </ScrollView>




    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_above="@id/buttonsLayout"
        android:background="#C5BFBF" />
    <!-- button code -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="10dp">

        <Button
            android:id="@+id/wishlistbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wishlist"
            android:background="@drawable/btnwhite"
            android:elevation="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/addToCartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:elevation="10dp"
            android:textSize="17dp"
            android:background="@drawable/btnbox"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="0.5" />
    </LinearLayout>

</RelativeLayout>
